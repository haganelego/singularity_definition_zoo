Bootstrap: docker
From: nvidia/cuda:11.7.1-cudnn8-runtime-ubuntu20.04
Stage: build

%setup
    ############################################
    # setup. コンテナ外で行われるコマンド
    ############################################

%files
    ############################################
    # files ファイルのマウント
    ############################################
    ../000_template/entrypoint.sh /

%environment
    ############################################
    # enviroments 環境変数の定義
    ############################################
    export TZ=Asia/Tokyo 
    export LC_ALL=C

%post
    ############################################
    # post ファイルのダウロードとか，色々．基本的にここに書く
    ############################################
    # aptでインストールする場合，入力待ちを避けるために下記のように書く
    # DEBIAN_FRONTEND=noninteractive && apt install -y hogehoge ...

    # essential  
    apt update
    DEBIAN_FRONTEND=noninteractive apt install -y lsb-release wget curl git nano gnupg build-essential software-properties-common
    mkdir -p /run/user/1000
    mkdir -p /var/lib/dbus
    
    # avoid freezing
    DEBIAN_FRONTEND=noninteractive apt install -y tzdata keyboard-configuration

    # install dependencied
    DEBIAN_FRONTEND=noninteractive apt install -y python3.8-dev python3.8-venv

    # pyenv
    ln -sf /usr/bin/python3 /usr/bin/python
    curl -kL https://bootstrap.pypa.io/get-pip.py | python
    python -m venv /venv_sam && chmod +x /venv_sam/bin/activate && /venv_sam/bin/pip install -U pip

    # install pytorch 1.13
    /venv_sam/bin/pip install torch==1.13.1+cu117 torchvision==0.14.1+cu117 torchaudio==0.13.1 --extra-index-url https://download.pytorch.org/whl/cu117

    # install SAM
    /venv_sam/bin/pip install git+https://github.com/facebookresearch/segment-anything.git
    /venv_sam/bin/pip install opencv-python pycocotools matplotlib onnxruntime onnx

